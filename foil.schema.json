{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "JSON schema for Foil foil.json config files.",
    "definitions": {
        "author": {
            "description": "The author of this foil package.",
            "type": [
                "object"
            ],
            "required": [
                "name"
            ],
            "properties": {
                "name": {
                    "type": "string"
                },
                "url": {
                    "type": "string",
                    "format": "uri"
                },
                "email": {
                    "type": "string",
                    "format": "email"
                }
            }
        }
    }
}